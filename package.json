{
  "name": "next-pack-workspace",
  "private": true,
  "repository": "git@github.com:haydnhkim/next-pack.git",
  "author": "Haydn Hyundong Kim <haydnhkim@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "dev/next-app"
  ],
  "dependencies": {
    "husky": "^4.2.1",
    "import-sort-cli": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.0",
    "jest": "^25.1.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.3"
  },
  "engines": {
    "node": ">= 10.0.0",
    "yarn": ">= 2.0.0"
  },
  "scripts": {
    "dev": "yarn workspace dev-test-next-app dev",
    "dev-server": "NODE_ENV=development yarn workspace dev-test-next-app server",
    "test": "npm-run-all --parallel test:*",
    "test:server": "yarn dev-server",
    "test:jest": "NODE_ENV=test jest",
    "test-prod-setting": "yarn workspace dev-test-next-app build && NODE_ENV=production yarn workspace dev-test-next-app server",
    "setup": "yarn workspaces foreach install",
    "teardown": "node utils/teardown.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn teardown && npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "import-sort --write",
      "prettier --write",
      "git add"
    ],
    "*.{md,css,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "release-it": {
    "github": {
      "release": true
    },
    "git": {
      "commitArgs": "--no-verify",
      "pushArgs": "--no-verify"
    }
  }
}
